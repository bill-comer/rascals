<hibernate-configuration>

  <session-factory name="sqlserver-live.customer">
    <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="connection.password">formfill</property>
    <property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=CUSTOMER</property>
    <property name="connection.username">sa</property>
    <property name="hibernate.default_catalog">CUSTOMER</property>
    <property name="hibernate.default_schema">dbo</property>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="current_session_context_class">
      thread
    </property>
    <property name="hibernate.show_sql">
      true
    </property>

